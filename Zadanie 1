/*
W kodzie wykorzystana jest pętla, która określa liczbę otzrymywanych elementów. 
W pętli losowane są wartości miesiąca, dnia i dnia tygodnia.Do wylosowanych wartości dnia tygodnia przypisane są ich nazwy.
Użytkownik wprowadza rok początkowy i końcowy i ilość dat, które chce wyświetlić. Program losuje rok z podanego przedziału, a następnie
dopisuje do niego losowy miesiąc i dzień.
*/

import java.util.Random;
import java.util.Scanner;

public class zadanie1 {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner user = new Scanner(System.in);
		System.out.println("Podaj rok początkowy: ");
		int rokp = user.nextInt();
		System.out.println("Podaj rok końcowy: ");
		int rokk = user.nextInt();
		System.out.println("Podaj liczbę elementów:  ");
		
		int n = user.nextInt();
		int tablica [] = new int [n];
		double max = rokk;
		double min = rokp;
		double zakres = rokk-rokp+1;
		Random rand = new Random();
		
		
		
		
		for (int i=0; i<tablica.length; i++)
		{
			
			int rok = (int) ((int) (Math.random()*zakres) + min);
						
			int miesiac = rand.nextInt(12)+1;
			int dzien = rand.nextInt(30)+1;
			int dzient = rand.nextInt(7)+1;
			
		
			if (dzient==0)
				System.out.println("Poniedziałek"+", "+rok+", "+miesiac+", "+dzien);
			if(dzient==1)
				System.out.println("Wtorek"+", "+rok+", "+miesiac+", "+dzien);
			if (dzient==2)
				System.out.println("Środa"+", "+rok+", "+miesiac+", "+dzien);
			if(dzient==3)
				System.out.println("Czwartek"+", "+rok+", "+miesiac+", "+dzien);
			if (dzient==4)
				System.out.println("Piątek"+", "+rok+", "+miesiac+", "+dzien);
			if(dzient==5)
				System.out.println("Sobota"+", "+rok+", "+miesiac+", "+dzien);
			if (dzient==6)
				System.out.println("Niedziela"+", "+rok+", "+miesiac+", "+dzien);
			
			
					
			
		}
		
		
		 
	
}
}

// Rozwiązaniem jest wywołanie funkcji dla 5 elementów.
/*
Oczekiwany wynik zwrócony przez wywołanie funkcji:
Podaj rok początkowy: 
2002
Podaj rok końcowy: 
2008
Podaj liczbę elementów:  
5
Piątek, 2003, 4, 9
Środa, 2003, 12, 14
Niedziela, 2007, 5, 24
Środa, 2005, 4, 11
Wtorek, 2003, 11, 30


